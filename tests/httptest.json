{
    "config": {
        "base_url": "http://localhost",
        "port": 8080,
        "pause": 500,
        "timeout": 5000,
        "keep_session": false
    },
    "tests": [
        {
            "description": "most basic test",
            "request_end_point": "get_basic_test",
            "request_method": "GET",
            "response_code": 200,
            "response_body": "Hello world!"
        },
        {
            "description": "json mirror",
            "request_end_point": "json_mirror",
            "request_method": "POST",
            "request_headers": [{"header": "content-type", "value": "application/json"}],
            "request_body": "{\"message\": \"test\"}",
            "response_code": 200,
            "response_body": "{\"message\":\"test\"}"
        },
        {
            "description": "json mirror with headers",
            "request_end_point": "json_mirror",
            "request_method": "POST",
            "request_headers": [{"header": "content-type", "value": "application/json"}],
            "request_body": "{\"message\": \"test\"}",
            "response_code": 200,
            "response_body": "{\"message\":\"test\"}",
            "response_headers": [{"header": "content-type", "value": "application/json"}]
        },
        {
            "description": "json mirror wrong method",
            "request_end_point": "json_mirror",
            "request_method": "GET",
            "response_code": 404
        },
        {
            "description": "mirror headers",
            "request_end_point": "mirror_headers",
            "request_method": "GET",
            "request_headers": [
                {
                    "header": "test1",
                    "value": "value1"
                },
                {
                    "header": "test2",
                    "value": "value2"
                }
            ],
            "request_params": [],
            "request_body": "",
            "response_code": 200,
            "response_headers": [
                {
                    "header": "test1",
                    "value": "value1"
                },
                {
                    "header": "test2",
                    "value": "value2"
                }
            ]
        }
    ]
}
